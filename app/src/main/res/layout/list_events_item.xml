<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/apptheme_list_selector_holo_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/screen_horizontal_margin"
    android:paddingRight="@dimen/screen_horizontal_margin"
    android:paddingTop="@dimen/screen_vertical_margin"
    android:paddingBottom="@dimen/screen_vertical_margin">

    <TextView
        android:gravity="center_vertical|right"
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="نص نص نص نص نص نص"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_medium" />

    <ImageView
        android:background="@android:color/transparent"
        android:src="@drawable/ex_list_arrow_collapsed"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/ex_list_expand_icon_dimen"
        android:layout_height="@dimen/ex_list_expand_icon_dimen"
        android:id="@+id/image_expand"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>